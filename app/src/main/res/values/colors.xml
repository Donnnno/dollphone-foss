<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--
        Try to not reference other theme colors, or it may result in
        an error (android.view.InflateException)

        If you want to reuse colors using referencing, just create a
        new color and reference it. Do not try to reference existing
        theme colors.
        Example -
        ```
        Declaring the color
        <color name="common_color">#FFF</color>

        Referencing the common color
        <color name="someColor">@color/common_color</color>
        <color name="anotherColor">@color/common_color</color>
        ```
    -->
    <color name="pink0">#FF4080</color>
    <color name="pink1">#ff79b2</color>
    <color name="pink2">#ffb0f0</color>

    <color name="aqua0">#40b0ff</color>
    <color name="aqua1">#68cfff</color>
    <color name="aqua2">#B0F0FF</color>

    <color name="white">#f3f3f3</color>
    <color name="gray">#9b969d</color>
    <color name="black">#4c4c4c</color>

    <color name="pinkPale">#FFEAF1</color>
    <color name="pinkDark">#600030</color>
    <color name="aquaDark">#003060</color>

    <color name="colorPrimary">@color/pink0</color>
    <color name="colorPrimaryDark">@color/pink1</color>
    <color name="colorAccent">@color/pink0</color>

    <color name="darkColorPrimary">@color/pinkDark</color>
    <color name="darkColorPrimaryDark">#400020</color>
    <color name="darkColorAccent">@color/pink0</color>

    <!-- Shortcut Icon -->
    <color name="shortcutIconBackground">#1A73E9</color>
    <color name="shortcutIconForeground">#FFF</color>

    <!-- Navigation Bar
    * Must be solid color, no alpha -->
    <color name="navigationBar">@color/colorPrimary</color>
    <color name="navigationBarDark">@color/darkColorPrimary</color>

    <!-- Splash Screen -->
    <color name="splashColor">@color/aqua0</color>

    <!-- Navigation View -->
    <color name="navigationViewHeaderBackground">#00FFFFFF</color>
    <color name="navigationViewHeaderBackgroundDark">#00FFFFFF</color>
    <color name="navigationViewTitle">#FFFFFF</color>
    <color name="navigationViewTitleBack">#00000000</color>

    <color name="navigationViewText">@color/black</color>
    <color name="navigationViewTextDark">@color/white</color>
    <color name="navigationViewTextSelected">@color/aqua0</color>
    <color name="navigationViewTextSelectedDark">@color/aqua2</color>
    <color name="navigationViewSelectedBackground">@color/aqua2</color>
    <color name="navigationViewSelectedBackgroundDark">@color/aqua0</color>

    <!-- Swipe Refresh -->
    <color name="swipeRefresh">#6E3AFF</color>

    <!-- Toolbar -->
    <color name="toolbarIcon">#FFF</color>
    <color name="toolbarIconDark">#FFFFFFFF</color>

    <!-- Tab -->
    <color name="tabIndicator">@color/white</color>
    <color name="tabIndicatorDark">@color/pink2</color>
    <color name="tabText">@color/pink2</color>
    <color name="tabTextDark">#80ffffff</color>
    <color name="tabTextSelected">@color/white</color>
    <color name="tabTextSelectedDark">@color/pink2</color>

    <!-- Card -->
    <color name="cardBackground">@color/white</color>
    <color name="cardBackgroundDark">@color/black</color>
    <color name="cardStroke">@color/gray</color>
    <color name="cardStrokeDark">@color/gray</color>

    <!-- Ripple -->
    <color name="rippleColor">#FFC7D6</color>
    <color name="rippleColorDark">@color/pink0</color>
    <color name="rippleAccent">@color/pink1</color>
    <color name="rippleAccentDark">@color/pink1</color>

    <!-- Attributes -->
    <color name="mainBackground">@color/pinkPale</color>
    <color name="mainBackgroundDark">#000</color>
    <color name="primaryText">@color/black</color>
    <color name="primaryTextDark">@color/white</color>
    <color name="secondaryText">#80000000</color>
    <color name="secondaryTextDark">@color/gray</color>

    <color name="dividerList">#FFFFFF</color>
    <color name="dividerListDark">#2C2C2C</color>

    <!-- Wallpaper Preview -->
    <color name="wallpaperStatusBar">#66000000</color>
    <color name="wallpaperToolbar">#66000000</color>

</resources>
